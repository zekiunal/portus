version: 0.1
log:
  level: info
storage:
  s3:
    accesskey: AWS_KEY
    secretkey: AWS_SECRET
    region: AWS_REGION
    bucket: AWS_BUCKET
    v4auth: true
  delete:
    enabled: true
http:
  addr: 0.0.0.0:5000
  secret: REGISTRY_SECRET
  debug:
    addr: 0.0.0.0:5001
auth:
  token:
    realm: http://EXTERNAL_IP:3000/v2/token
    service: EXTERNAL_IP:REGISTRY_PORT
    issuer: EXTERNAL_IP
    rootcertbundle: /etc/docker/registry/portus.crt
notifications:
  endpoints:
    - name: portus
      url: http://EXTERNAL_IP:3000/v2/webhooks/events
      timeout: 500ms
      threshold: 5
      backoff: 1s
reporting:
  newrelic:
    licensekey: NEW_RELIC
    name: registry
    verbose: true